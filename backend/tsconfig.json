{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "_version": "20.1.0",
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "your/custom/type/definition/path"],
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDirs": ["./src", "./routes"],
  },
  "include": [
    "./src/**/*",
    "./routes/**/*",
    "./models/**/*",
    "./controllers/**/*",
  ],
  "exclude": ["node_modules"],
}
